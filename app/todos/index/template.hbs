<div class="row">
  {{#each model as |todo|}}
    <div class="col-md-4">
      <div class="panel panel-default todo-item">
        <div class="panel-heading">
          <h3 class="panel-title">{{todo.title}}</h3>
        </div>
        <div class="panel-body">
          <p>CreatedBy: {{todo.createdBy}}</p>
        </div>
        <div class="panel-footer text-right">
          {{#link-to 'todos.edit' todo.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteTodo' todo}}>Delete</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
